{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "globalEnv": ["MAILBOX_DB_HOST", "MAILBOX_DB_PORT", "MAILBOX_DB_USER", "MAILBOX_DB_PASSWORD", "NODE_ENV"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["fetcher#build"]
        },
        "test": {
            "dependsOn": ["^build"]
        }
    }
}
